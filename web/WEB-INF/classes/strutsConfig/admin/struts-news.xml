<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
    <package name="news" namespace="/news" extends="common">
        <action name="news_*" class="org.company.actions.NewsAction" method="{1}">
            <result>/WEB-INF/admin/news/listNews.jsp</result>
            <result name="toAddNews">/WEB-INF/admin/news/addNews.jsp</result>
            <result name="toUpdateNews">/WEB-INF/admin/news/updateNews.jsp</result>
        </action>
    </package>
</struts>