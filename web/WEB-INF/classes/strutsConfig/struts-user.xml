<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
    <package name="user" namespace="/" extends="common">
        <action name="index" class="org.company.actions.user.Index" method="index">
            <result>/WEB-INF/user/index.jsp</result>
        </action>
        <action name="intro" class="org.company.actions.user.Index" method="intro">
            <result>/WEB-INF/user/intro.jsp</result>
        </action>
        <action name="product" class="org.company.actions.user.Index" method="product">
            <result>/WEB-INF/user/product.jsp</result>
        </action>
        <action name="detail" class="org.company.actions.user.Index" method="productDetails">
            <result>/WEB-INF/user/productDetail.jsp</result>
        </action>
        <action name="news" class="org.company.actions.user.Index" method="news">
            <result>/WEB-INF/user/news.jsp</result>
        </action>
        <action name="newsDetail" class="org.company.actions.user.Index" method="newsDetail">
            <result>/WEB-INF/user/newsDetail.jsp</result>
        </action>
    </package>
</struts>